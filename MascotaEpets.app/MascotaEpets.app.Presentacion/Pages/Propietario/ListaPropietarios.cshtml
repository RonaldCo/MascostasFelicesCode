@page
@model MascotaEpets.app.Presentacion.Pages.ListaPropietariosModel
@{
}

<div class="row">
    <div class="col-lg col-md col">
        <div class="card">
            <div class="card-header bg-dark bg-gradient text-light">
              <h2>Lista de Propietarios</h2>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombres</th>
                            <th>Apellidos</th>
                            <th>Cedula</th>
                            <th>Telefono</th>
                            <th>Direccion</th>
                            <th>Email</th>
                            <th>Mascotas</th>
                        </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in Model.Propietarios)
                              {  
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Nombres
                                    </td>
                                    <td>
                                        @item.Apellidos
                                    </td>
                                    <td>
                                        @item.Cedula
                                    </td>
                                    <td>
                                        @item.Telefono
                                    </td>
                                    <td>
                                        @item.Direccion
                                    </td>
                                    <td>
                                        @item.Email
                                    </td>
                                    <td>
                                        @item.CantidadMascota
                                    </td>
                                    <td>
                                       <a class="btn btn-primary table-btn" asp-page="./BuscarPropietario" asp-route-IdMedico="@item.Id">Buscar</a>
                                    </td> 
                                    <td>
                                       <a class="btn btn-warning table-btn" asp-page="./ActualizarPropietarios" asp-route-IdMedico="@item.Id">Editar</a>
                                    </td> 
                                    <td>
                                       <a class="btn btn-success table-btn" asp-page="./IngresarPropietarios" >Ingresar</a>
                                    </td> 
                                </tr>
                              }
                    </tbody>
                    
                </table>

            </div>
            <div class="card-footer">

            </div>
        </div>
    </div>
    
</div>