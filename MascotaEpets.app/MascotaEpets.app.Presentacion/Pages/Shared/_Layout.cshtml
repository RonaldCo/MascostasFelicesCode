<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Mascota Epets</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
      <div> 
        <nav Id="navega" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3" >
            <div class="navbar-brand" href="index.html">
                <img src="~/img/MascotasFelizPets.png" width="48" class="img" title="title" alt="additional title" />
            </div>
            <div>
                <h1 class="mt-1" style="color: white; text-align-last: auto;" >Mascotas Epets</h1>
            </div>
            <div class="container" >
                <div>
                   
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between " style="text-justify">
                    <ul class="nav nav-tabs card-header-tabs" >
                          <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Index"><img src="~/img/home.png" width="24"  class="img"/>Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white"  asp-area="" asp-page="/Medicos/ListadoMedicos"><img src="~/img/vete2.png" width="24"  class="img"/>Medicos </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Propietario/ListaPropietarios"><img src="~/img/dueñomascota.png" width="24"  class="img"/>Propietarios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Mascotas/ListaMascotas"><img src="~/img/icons8-bulldog-64.png" width="24"  class="img"/>Mascota</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Empresa/ListaEmpresa"><img src="~/img/icons8-shop-16.png" width="24"  class="img"/>Empresa</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/RegistroMed/ListaRegistros"><img src="~/img/registro.png" width="24"  class="img"/>Registro</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Solicitud/ListaSolicitud"><img src="~/img/solicitud.png" width="24"  class="img"/>Solicitud</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

  </div>   
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark">
        <div class="container">
            &copy; 2021 - MascotaEpets Epets - <a asp-area="" asp-page="/Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
