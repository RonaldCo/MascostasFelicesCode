@page
@model MascotaEpets.app.Presentacion.Pages.ListaMascotasModel
@{
}
<div class="row">
    <div class="col-lg col-md col">
        <div class="card">
            <div class="card-header bg-dark bg-gradient text-light">
              <h3>Lista de Mascotas</h3>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Color de Ojos</th>
                            <th>Color de Piel</th>
                            <th>Temperatura</th>
                            <th>Peso</th>
                            <th>Frecuencia Respiratoria</th>
                            <th>Frecuencia Cardiaca</th>
                            <th>Estado de Animo</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                         @foreach (var item in Model.Mascota)
                              {  
                                <tr>
                                    <td>
                                        @item.IdMascota
                                    </td>
                                    <td>
                                        @item.Nombre
                                    </td>
                                    <td>
                                        @item.ColorOjos
                                    </td>
                                    <td>
                                        @item.ColorPiel
                                    </td>
                                    <td>
                                        @item.Temperatura
                                    </td>
                                    <td>
                                        @item.Peso
                                    </td>
                                      <td>
                                        @item.FrecuenciaRespiratoria
                                    </td>
                                    <td>
                                        @item.FrecuenciaCardiaca
                                    </td>
                                    <td>
                                        @item.EstadoAnimo
                                    </td>
                                    
                                    <td>
                                       <a class="btn btn-primary table-btn" asp-page="./BuscarMascota" asp-route-IdMascota="@item.IdMascota">Buscar</a>
                                    </td> 
                                    <td>
                                       <a class="btn btn-warning table-btn" asp-page="./ActualizarMascota" asp-route-IdMascota="@item.IdMascota">Editar</a>
                                    </td> 
                                    <td>
                                       <a class="btn btn-success table-btn" asp-page="./IngresarMascota" >Ingresar</a>
                                    </td> 
                                     <td>
                                       <a class="btn btn-danger table-btn" asp-page="" >Eliminar</a>
                                    </td>
                                </tr>
                              }
                    </tbody>
                    
                </table>

            </div>
            <div class="card bg-dark bg-gradient text-light">
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    
</div>
