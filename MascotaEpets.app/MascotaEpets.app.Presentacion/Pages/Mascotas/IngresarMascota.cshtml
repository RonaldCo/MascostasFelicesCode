@page
@model MascotaEpets.app.Presentacion.Pages.IngresarMascotaModel
@{
}
<div class="card bg-dark bg-gradient text-light">
<h3>Ingresar Mascota</h3>
</div>
<form method="post">
<div class="form-group">
        <label asp-for="mascota.Nombre"></label>
        <input id="Nombre" type="text" asp-for="mascota.Nombre" class="form-control" placeholder="Ingrese Nombres"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.ColorOjos"></label>
        <input id="Color_Ojos" type="text" asp-for="mascota.ColorOjos" class="form-control" placeholder="Ingrese Color de Ojos"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.ColorPiel"></label>
        <input id="Color_Piel" type="text" asp-for="mascota.ColorPiel" class="form-control" placeholder="Ingrese Color de Piel"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.Temperatura"></label>
        <input id="Temperatura" type="text" asp-for="mascota.Temperatura" class="form-control" placeholder="Ingrese Temperatura"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.Peso"></label>
        <input id="Peso" type="text" asp-for="mascota.Peso" class="form-control" placeholder="Ingrese Peso"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.FrecuenciaRespiratoria"></label>
        <input id="Frecuencia_Respiratoria" type="text" asp-for="mascota.FrecuenciaRespiratoria" class="form-control" placeholder="Ingrese Frecuencia Respirataria"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.FrecuenciaCardiaca"></label>
        <input id="Frecuencia_Cardiaca" type="text" asp-for="mascota.FrecuenciaCardiaca" class="form-control" placeholder="Ingrese Frecuencia Cardiaca"/>
    </div>
    <div class="form-group">
        <label asp-for="mascota.EstadoAnimo"></label>
        <input id="Estado_Animo" type="text" asp-for="mascota.EstadoAnimo" class="form-control" placeholder="Ingrese EstadoAnimo"/>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
<button id="Cancelar" onclick="LimpiarForm()" type="submit" class="btn btn-danger">Cancelar</button>

<a asp-page="./ListaMascotas" class="btn btn-primary">Regresar</a>       
<script>

        function LimpiarForm(){

            $("#Nombre").val('');
            $("#Apellido").val('');
            $("#TarjetaPro").val('');
            $("#Cedula").val('');
            $("#Telefono").val('');
        }

</script>